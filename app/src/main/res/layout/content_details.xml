<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@color/gray_item"
>

        <mafia.adamzimny.mafia.view.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/image_view" android:elevation="8dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1" android:gravity="bottom">
                <TextView
                        android:text="Name" android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/gray_text"
                        android:layout_width="96dp" android:layout_height="wrap_content"
                        android:textSize="18sp"/>
                <TextView
                        android:text="Sharon Rowden"
                        android:textColor="@color/white"
                        android:textSize="32sp" android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/name_text"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:gravity="bottom"
                    android:orientation="horizontal">

                <TextView
                        android:text="Age"
                        android:textColor="@color/gray_text" android:paddingRight="8dp" android:paddingLeft="8dp"
                        android:textSize="18sp"
                        android:layout_width="96dp" android:layout_height="wrap_content"/>
                <TextView
                        android:text="24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:textSize="32sp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textColor="@color/white" android:id="@+id/age_text"/>
                <TextView
                        android:text="Distance"
                        android:layout_height="wrap_content" android:textSize="18sp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_width="wrap_content"
                        android:textColor="@color/gray_text" android:paddingLeft="16dp" android:paddingRight="16dp"/>

                <TextView
                        android:text="10 km"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:textSize="32sp" android:layout_gravity="bottom"
                        android:textColor="@color/white" android:id="@+id/distance_text"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal" android:layout_weight="1" android:gravity="bottom">
                <TextView
                        android:text="Time left" android:textSize="18sp"
                        android:layout_gravity="bottom|center_horizontal" android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text" android:paddingRight="8dp" android:paddingLeft="8dp"
                />
                <TextView
                        android:text="5d 20h 14m" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white" android:textSize="32sp" android:layout_gravity="bottom"
                        android:id="@+id/time_text"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal" android:layout_weight="0.9">
                <TextView
                        android:text="Code" android:textSize="18sp"
                        android:layout_gravity="bottom|center_horizontal" android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/code_text"
                        android:textColor="@color/gray_text" android:paddingRight="8dp" android:paddingLeft="8dp"
                        android:layout_marginBottom="2dp"/>
                <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                          android:textColor="@color/white"
                          android:layout_weight="1" android:id="@+id/code_field"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send"
                        android:background="@color/transparent" android:textAllCaps="false" android:id="@+id/send_button"/>

            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="8dp" android:layout_height="match_parent" android:background="@color/target_red"
              android:layout_column="2" android:layout_rowSpan="3" android:id="@+id/status_bar"/>
    </LinearLayout>
</LinearLayout>